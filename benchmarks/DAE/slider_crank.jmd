function residual_wrapper!(residual, yprime, y, p, t)
    slider_crank_resmbs!(residual, y, yprime, t)
end

prob_dae = DAEProblem(residual_wrapper!, similar(y0), y0, tspan; 
                      differential_vars=differential_vars)

